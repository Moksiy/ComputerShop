<Page x:Class="ComputerShop.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ComputerShop"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" Height="auto" Width="auto"
      Title="AuthorizationPage">

    <Grid>
        <TextBox  x:Name="LoginBox" HorizontalAlignment="Center" Height="28" Margin="0,220,0,0" TextWrapping="Wrap" Text="Login" VerticalAlignment="Top" Width="300" FontSize="20"/>
        <TextBox x:Name="PasswordBox" HorizontalAlignment="Center" Height="28" Margin="0,290,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Width="300" FontSize="20"/>

    </Grid>
</Page>
