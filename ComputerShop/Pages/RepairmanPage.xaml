<Page x:Class="ComputerShop.RepairmanPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ComputerShop"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" Height="auto" Width="auto" MinHeight="700" MinWidth="1000"
      Title="RepairmanPage">

    <Grid>
        <Button x:Name="Logout" Content="logout" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="92" Height="24" FontSize="15" Click="Logout_Click" FontFamily="Yu Gothic UI Semibold"/>
        <Button x:Name="Warehouse" Content="Склад" HorizontalAlignment="Center" Margin="0,150,0,0" VerticalAlignment="Top" Width="280" Height="52" FontSize="25" Click="Warehouse_Click" FontFamily="Yu Gothic UI Semibold"/>
        <Button x:Name="Repairs" Content="Ремонты" HorizontalAlignment="Center" Margin="0,250,0,0" VerticalAlignment="Top" Width="280" Height="52" FontSize="25" Click="Repairs_Click" FontFamily="Yu Gothic UI Semibold"/>
        <Button x:Name="Buildings" Content="Сборки" HorizontalAlignment="Center" Margin="0,350,0,0" VerticalAlignment="Top" Width="280" Height="52" FontSize="25" Click="Buildings_Click" FontFamily="Yu Gothic UI Semibold"/>

    </Grid>
</Page>
